<h2>Editing Book</h2>

<%= form_with model: @book, url: book_path(@book.id), method: :PATCH do |f| %>
    <p>Title</p>
    <%= f.text_field :title %>
    
    <p>Body</p>
    <%= f.text_area :body %>
    
    <%= f.submit 'Update Book' %>
<% end %>

<p>
   <%= link_to 'Show', book_path %>|<%= link_to 'Back', books_path %>
</p>